  <SoundDef>
    <defName>VWEB_Warbolter_Fire</defName>  
    <context>MapOnly</context>  
    <maxSimultaneous>1</maxSimultaneous>  
    <subSounds>
      <li>
        <grains>
          <li Class="AudioGrain_Clip">
            <clipPath>Shots/Shot_Warbolter</clipPath>
          </li>
        </grains>      
      </li>
    </subSounds>
